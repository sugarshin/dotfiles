[core]
	editor = vim
	excludesfile = ~/.gitignore.global
[include]
	path = ~/.gitconfig.local
[alias]
	st = status
	cm = commit
	co = checkout
	br = branch
	ad = add
	ps = push
	pl = pull
	pr = pull-request
	lg = log --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	delete-merged-branches = !git branch --merged | grep -vE ^\\*|master$|develop$ | xargs -I % git branch -d %
	dm = delete-merged-branches

[push]
	default = simple
[gpg]
	program = gpg
[commit]
	gpgsign = true
[ghq]
	root = ~/dev/src
